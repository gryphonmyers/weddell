{
    "type": "module",
    "name": "weddell",
    "version": "4.0.0",
    "description": "Tiny, isomorphic, async-first component framework.",
    "main": "lib/node.js",
    "module": "lib/node.js",
    "browser": "lib/browser.js",
    "scripts": {
        "start": "budo docs/app.js:static/bundle.js --dir docs",
        "test": "ava",
        "docs": "jsdoc -c jsdoc.json",
        "bundlesize": "bundlesize",
        "bundle": "rollup -c rollup.config.js"
    },
    "files": [
        "src",
        "lib",
        "dist"
    ],
    "author": "Gryphon Myers",
    "license": "MIT",
    "dependencies": {
        "fast-deep-equal": "^2.0.1",
        "isomitter": "^0.1.0",
        "nanomorph": "^5.4.2"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.1.0",
        "ava": "^3.6.0",
        "bundlesize": "^0.18.1",
        "rollup": "^2.36.2",
        "rollup-plugin-analyzer": "^4.0.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^4.0.3"
    },
    "bundlesize": [
        {
            "path": "./dist/weddell.node.cjs.js",
            "maxSize": "10 kB"
        },
        {
            "path": "./dist/weddell.node.cjs.js",
            "maxSize": "4 kB",
            "compression": "brotli"
        },
        {
            "path": "./dist/weddell.node.esm.js",
            "maxSize": "10 kB"
        },
        {
            "path": "./dist/weddell.node.esm.js",
            "maxSize": "4 kB",
            "compression": "brotli"
        }
    ]
}
